{
    "cmake.configureOnOpen": true,
    "cmake.buildBeforeRun":true,
    "cmake.sourceDirectory": "${workspaceFolder}",
    "cmake.buildDirectory": "${workspaceFolder}/build.dir/${buildType}",
   
    "clang.cxxflags": [
        "-std=c++17",
        "-Wall"
    ],
    "clang.completion.enable": true,

    "cmake.generator": "Unix Makefiles",
    "files.associations": {
        "*.ipp": "cpp"
    },
    "clangd.arguments": [
        "-background-index",
        "-index",
        "-j=4",
        "-all-scopes-completion=false"
    ],
    "files.exclude": {
        "**/.clangd/index": true
    }
}